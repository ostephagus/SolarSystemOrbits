<Window x:Class="GUI.PlanetSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Select Solar system bodies" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="5 5 5 5">
        <TextBlock FontSize="18" Margin="10 10 10 10">Select the planets to include in the plot:</TextBlock>
        <StackPanel Name="planetsStackPanel"></StackPanel> <!--This StackPanel will by dynamically filled with CheckBox children.-->
        <Button Name="OKButton" Click="OKButton_Click">OK</Button>
    </StackPanel>
</Window>
